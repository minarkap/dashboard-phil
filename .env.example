# ============================================
# CONFIGURACIÓN DE BASE DE DATOS
# ============================================
# URL de conexión a PostgreSQL (Railway proporciona esta variable automáticamente)
# Para desarrollo local: postgresql+psycopg2://usuario:password@localhost:5432/database
DATABASE_URL=postgresql+psycopg2://dashboard:dashboard@localhost:5432/dashboard

# Configuración de PostgreSQL (solo para docker-compose local)
POSTGRES_USER=dashboard
POSTGRES_PASSWORD=dashboard
POSTGRES_DB=dashboard

# ============================================
# AUTENTICACIÓN DEL DASHBOARD
# ============================================
# Contraseña para proteger el acceso al dashboard Streamlit
# Si no se establece, el dashboard será público
DASHBOARD_PASSWORD=
APP_PASSWORD=

# ============================================
# STRIPE
# ============================================
# API Key de Stripe (obtener en https://dashboard.stripe.com/apikeys)
STRIPE_API_KEY=

# ============================================
# GOOGLE ADS
# ============================================
# Developer Token de Google Ads (requiere aprobación de Google)
GOOGLE_ADS_DEVELOPER_TOKEN=

# ID de la cuenta de Google Ads (formato: 123-456-7890)
GOOGLE_ADS_CUSTOMER_ID=

# ID de cuenta de login (MCC) si es diferente de CUSTOMER_ID
GOOGLE_ADS_LOGIN_CUSTOMER_ID=

# Credenciales OAuth para Google Ads
# Pueden ser las mismas que GA4 si usas la misma aplicación OAuth
GOOGLE_ADS_CLIENT_ID=
GOOGLE_ADS_CLIENT_SECRET=
GOOGLE_ADS_REFRESH_TOKEN=

# Variantes alternativas de nombres (para compatibilidad)
GOOGLE_ADS_OAUTH_CLIENT_ID=
GOOGLE_ADS_OAUTH_CLIENT_SECRET=

# ============================================
# GOOGLE ANALYTICS 4 (GA4)
# ============================================
# Property ID de GA4 (formato: 123456789)
GA4_PROPERTY_ID=

# Credenciales OAuth para GA4
# Pueden ser las mismas que Google Ads si usas la misma aplicación OAuth
GA4_OAUTH_CLIENT_ID=
GA4_OAUTH_CLIENT_SECRET=
GA4_OAUTH_REFRESH_TOKEN=

# ============================================
# OAUTH COMPARTIDO (Google)
# ============================================
# Si usas las mismas credenciales para GA4 y Google Ads, puedes usar estas
# El código buscará primero las específicas (GA4_*, GOOGLE_ADS_*) y luego estas
OAUTH_CLIENT_ID=
OAUTH_CLIENT_SECRET=
OAUTH_REFRESH_TOKEN=
OAUTH_SCOPE=https://www.googleapis.com/auth/analytics.readonly

# ============================================
# META ADS (Facebook)
# ============================================
# Access Token de Meta (System User long-lived token)
# Obtener en: https://developers.facebook.com/tools/explorer/
META_ACCESS_TOKEN=

# ID de cuenta de anuncios de Meta (formato: act_123456789)
META_AD_ACCOUNT_ID=

# Ventanas de atribución (opcional, default: 7d_click,1d_view)
META_ATTR_WINDOWS=7d_click,1d_view

# ============================================
# KAJABI
# ============================================
# URL base de la API de Kajabi (default: https://api.kajabi.com)
KAJABI_BASE_URL=https://api.kajabi.com
KAJABI_API_URL=

# Credenciales OAuth de Kajabi
KAJABI_CLIENT_ID=
KAJABI_CLIENT_SECRET=

# Configuración de paginación (opcional)
KAJABI_PAGE_SIZE=500
KAJABI_MAX_PAGES=

# ============================================
# HOTMART
# ============================================
# Opción 1: Token de acceso directo (más simple)
HOTMART_ACCESS_TOKEN=

# Opción 2: Credenciales OAuth (si no tienes token)
HOTMART_CLIENT_ID=
HOTMART_CLIENT_SECRET=

# ============================================
# GOOGLE SHEETS
# ============================================
# Opción 1: Credenciales JSON (Service Account)
# Pega el contenido JSON completo de tu Service Account
GOOGLE_SHEETS_CREDENTIALS_JSON=

# ID de la hoja de cálculo (parte de la URL: .../d/SHEET_ID/edit)
GOOGLE_SHEETS_ECONOMICS_ID=
GSHEETS_SHEET_ID=

# Opción 2: OAuth (si prefieres usar OAuth en lugar de Service Account)
GSHEETS_OAUTH_CLIENT_ID=
GOOGLE_SHEETS_OAUTH_CLIENT_ID=
GSHEETS_OAUTH_CLIENT_SECRET=
GOOGLE_SHEETS_OAUTH_CLIENT_SECRET=
GSHEETS_OAUTH_REFRESH_TOKEN=
GOOGLE_SHEETS_OAUTH_REFRESH_TOKEN=

# Nombre de la pestaña/hoja en Google Sheets
GSHEETS_TAB=
GOOGLE_SHEETS_TAB=

# ============================================
# CONFIGURACIÓN DEL SERVIDOR
# ============================================
# Puerto para el servidor de upload (usado en la app Streamlit)
UPLOAD_SERVER_PORT=8787

# Puerto para Streamlit (Railway usa la variable PORT automáticamente)
# No es necesario configurarlo manualmente en Railway
PORT=8501
